<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background_selected"
    tools:context="edu.wwu.avilatstudents.journey.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/journeys_fab"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_map_black_24dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:backgroundTint="@color/mainNavBase" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_fab"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        android:layout_alignBottom="@+id/journeys_fab"
        android:layout_toEndOf="@+id/journeys_fab"
        android:layout_marginStart="65dp"
        app:backgroundTint="@color/mainNavBase" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buddies_fab"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_group_black_24dp"
        android:layout_alignTop="@+id/journeys_fab"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        app:backgroundTint="@color/mainNavBase" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_main">

            <SearchView
                android:id="@+id/search_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:iconifiedByDefault="false" />

            <!--<Button-->
                <!--android:background="@drawable/ic_person_add_black_24dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/button2"-->
                <!--android:layout_weight="1" />-->

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/transition_container">

            <include layout="@layout/view_buddies" />
            <include layout="@layout/view_journeys" />

            <include layout="@layout/view_settings" />

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>
