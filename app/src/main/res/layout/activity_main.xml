<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background_selected"
    tools:context="edu.wwu.avilatstudents.journey.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/transition_container">

        <include layout="@layout/view_journeys" />
        <include layout="@layout/view_buddies" />
        <include layout="@layout/view_settings" />

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/journeys_fab"
        android:clickable="true"
        app:fabSize="normal"
        android:src="@drawable/master_chief_ripped"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buddies_fab"
        android:clickable="true"
        app:fabSize="normal"
        android:src="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/journeys_fab"
        android:layout_toStartOf="@+id/journeys_fab"
        android:layout_marginEnd="65dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_fab"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_manage"
        android:layout_alignBottom="@+id/journeys_fab"
        android:layout_toEndOf="@+id/journeys_fab"
        android:layout_marginStart="65dp" />


</RelativeLayout>
