<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_journey_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="edu.wwu.avilatstudents.journey.NewJourneyNameActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="#8C9073"
        android:elevation="-1dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_map_vector_outline" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/journey_name_input_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="63dp"
            android:text="@string/journey_name_input_label_text"
            android:textSize="18sp"
            tools:text="@string/journey_name_input_label_text" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/journey_name_input_label"
            android:layout_marginTop="11dp">

            <EditText
                android:id="@+id/journey_name_textinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/journey_name_input_hint"
                android:textSize="24sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/journey_name_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="?attr/colorAccent"
            android:text="Next"
            android:textColor="#ffffff" />

    </RelativeLayout>

</RelativeLayout>
