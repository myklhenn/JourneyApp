<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background_selected"
    android:id="@+id/journeys_layout"
    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/active_journeys_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="ACTIVE"
                />

            <edu.wwu.avilatstudents.journey.ExpandableHeightGridView
                android:id="@+id/active_journey_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:numColumns="2"
                android:isScrollContainer="false"
                android:scrollbars="none"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                />

            <TextView
                android:id="@+id/invited_journeys_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="INVITES"
                />

            <edu.wwu.avilatstudents.journey.ExpandableHeightGridView
                android:id="@+id/invited_journey_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:numColumns="2"
                android:isScrollContainer="false"
                android:scrollbars="none"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>